- hosts: SERVERBDD
  become: yes
  tasks:
  - name: Use /usr/bin/python3 as default interpreter
    set_fact:
      ansible_python_interpreter: /usr/bin/python3
  - name: Install MariaDB
    yum:
      name: mariadb-server
      state: latest
      update_cache: yes
  - name: Enable MariaDB service
    service:
      name: mariadb
      state: started
      enabled: yes